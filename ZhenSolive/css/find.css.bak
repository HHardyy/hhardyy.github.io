/*直播系统以及截图功能*/
.box{margin-top:50px; width:500px; height:400px;  background-image:url(../images/LOGO_BLACK.jpg); background-size:cover; border-radius:10px 10px 10px 10px; float:left;}
.box .box-top{line-height:50px; font-size:15px; font-family:"微软雅黑"; font-weight:300; background:#cc00cc; color:#6600ff;            border-radius:10px 10px 0px 0px;}
.box .bo{border:none; outline:none; background:#ff3300; width:80px; height:30px; border-radius:0px 10px 10px 0px; cursor:pointer;}
.box .bo:hover{background:#cc6600; color:#99ff00;}
.box .bot{border:none; outline:none; background:#ff33ff; width:80px; height:30px; border-radius:5px 5px 5px 5px;                       margin-left:12px; color:#000000;}
.box .bot:hover{background:#cc3300; color:#ffffff; 
       transition:all 2s;
	   -moz-transform:rotate(360deg);
	   transform:rotate(360deg);
       border-radius:5px;
	   box-shadow:5px 5px 5px #000033;
	   cursor:pointer;
	   }
.box .gamre{ width:500px; height:300px;}
.box .foot{height:50px; width:500px; background:#cc66ff; color:#000000; font-size:20px; font-weight:300; font-family:"华文行楷"; line-height:50px;              border-radius:0px 0px 10px 10px; float:left; padding-left:50px; width:450px;}
#canvas{border:1px solid #cc3300; border-radius:10px 10px 10px 10px; margin:auto;}